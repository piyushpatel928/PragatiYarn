    <div id="content" class="container_16 clearfix">

        @using (Html.BeginForm("EditMaterial", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="grid_16">
                <h2>Edit Material</h2>
            </div>
             <span style="color: green; font-size: 18px;">@ViewBag.success </span>
            <br />
            <span style="color: red; font-size: 18px;">@ViewBag.Message</span>
            <br />
            
            <div class="grid_5">
                <p>
                    <label for="title">Select Material Type:</label>
                    <select id="main_material" name="MaterialId">
                        <option value="@Model.MaterialId">@Model.MaterialName</option>
                    </select><br />
                    
                    <br />

                </p>
            </div>
            
            <div class="grid_16" id="submaterial" style="display: none">
                <p>
                    <label for="title">Select Sub Material Type:</label>
                    <select id="sub_material" name="SubMaterialId" style="width:29%;">
                        <option value="@Model.SubMaterialId">@Model.SubMaterialName</option>
                    </select><br />
                    <br />

                </p>
            </div>
            
            <div class="grid_16">
                <p>
                    <label for="title">Material Code:</label>
                    @*<input type="text" id="MaterialCode" name="MaterialCode" style="width:29%;" />*@
                    @Html.EditorFor(a => a.MaterialCode,new {@id="MaterialCode",@disabled="disabled",@style="width:270px;" } )
                    <br />
                    <br />
                    <br />

                </p>
            </div>
            
            
            <div class="grid_16">
                <p>
                    <label for="title">Material Old Image:</label>
                    <img alt='#' height='50' width='100' src='@Url.Content(Model.MaterialImagePath)' style='vertical-align: middle'; />
                    <br />
                    <br />

                </p>
            </div>
            
            <div class="grid_16">
                <p>
                    <label for="title">Material New Image:</label>
                    <input type="file" name="MaterialImage" style="width:29%;" /><br />
                    <br />

                </p>
            </div>
            
            <div class="grid_16" id="mat_price" style="display: none">
                <p>
                    <label for="title">Material Price:</label>
                    <input type="text" id="Price" name="Price" style="width:29%;" /><br />
                    <br />

                </p>


            </div>
            <div class="grid_16">
                
                    <p class="submit">
                        <button type="submit" class="btn btn-primary" value="Add Customer">Update Material</button>
                    </p>
                
            </div>
